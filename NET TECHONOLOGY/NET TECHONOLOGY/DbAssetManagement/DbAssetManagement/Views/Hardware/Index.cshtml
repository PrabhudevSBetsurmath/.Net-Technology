@model IEnumerable<DbAssetManagement.Models.Hardware>

@{
    ViewData["Title"] = "Index";
}

<h1>Hardware</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
